    <script>
        function openDemo() {
            const modal = document.getElementById('demoModal');
            modal.classList.add('active');
            document.body.style.overflow = 'hidden';
        }

        function closeDemoModal() {
            const modal = document.getElementById('demoModal');
            modal.classList.remove('active');
            document.body.style.overflow = 'auto';
        }

        function openMentorshipFromDemo() {
            closeDemoModal();
            setTimeout(() => {
                openPaymentModal('Mentorship', '$150');
            }, 300);
        }

        function updateDemoCalculator() {
            const slider = document.getElementById('demoAmountSlider');
            const amountValue = document.getElementById('demoAmountValue');
            const sliderTrack = document.getElementById('demoSliderTrack');
            const pnl10 = document.getElementById('demoPnl10');
            const pnl20 = document.getElementById('demoPnl20');
            const pnl30 = document.getElementById('demoPnl30');
            const pnlAll = document.getElementById('demoPnlAll');

            if (!slider) return;

            const amount = parseInt(slider.value);
            
            // Update amount display
            amountValue.textContent = `${amount.toLocaleString()}`;
            
            // Update slider track
            const percentage = (amount - 100) / (10000 - 100) * 100;
            sliderTrack.style.width = `${percentage}%`;
            
            // Calculate PNL based on different timeframes
            const profit10 = Math.round(amount * 0.163);
            pnl10.textContent = `+${profit10.toLocaleString()}`;
            
            const profit20 = Math.round(amount * 0.457);
            pnl20.textContent = `+${profit20.toLocaleString()}`;
            
            const profit30 = Math.round(amount * 1.054);
            pnl30.textContent = `+${profit30.toLocaleString()}`;
            
            const profitAll = Math.round(amount * 8.06);
            pnlAll.textContent = `+${profitAll.toLocaleString()}`;
        }

        // Initialize demo calculator when modal opens
        document.addEventListener('DOMContentLoaded', function() {
            const demoSlider = document.getElementById('demoAmountSlider');
            if (demoSlider) {
                demoSlider.addEventListener('input', updateDemoCalculator);
                updateDemoCalculator();
            }

            // Trade calculator functionality
            const leverageSlider = document.getElementById('leverageSlider');
            const investmentSlider = document.getElementById('investmentSlider');
            
            if (leverageSlider && investmentSlider) {
                leverageSlider.addEventListener('input', updateTradeCalculator);
                investmentSlider.addEventListener('input', updateTradeCalculator);
                updateTradeCalculator();
            }
        });

        function updateTradeCalculator() {
            const leverageSlider = document.getElementById('leverageSlider');
            const investmentSlider = document.getElementById('investmentSlider');
            const leverageDisplay = document.getElementById('leverageDisplay');
            const investmentDisplay = document.getElementById('investmentDisplay');
            const tradeProfitElement = document.getElementById('tradeProfit');

            if (!leverageSlider || !investmentSlider) return;

            const leverage = parseInt(leverageSlider.value);
            const investment = parseInt(investmentSlider.value);

            // Update displays
            leverageDisplay.textContent = `${leverage}x`;
            investmentDisplay.textContent = `${investment.toLocaleString()}`;

            // Calculate profit based on 5.4% return with leverage
            // Entry: $2,445, Exit: $2,620 = 7.15% price movement
            // But we show 5.4% return on investment after fees
            const baseReturn = 0.054; // 5.4%
            const leveragedReturn = baseReturn * leverage;
            const profit = Math.round(investment * leveragedReturn);
            const profitPercentage = (leveragedReturn * 100).toFixed(1);

            tradeProfitElement.textContent = `+${profit.toLocaleString()} (+${profitPercentage}%)`;
        }

        // Under Construction Modal functionality
        function showConstructionModal() {
            const modal = document.getElementById('constructionModal');
            modal.classList.add('active');
            document.body.style.overflow = 'hidden';
        }

        function showCardConstruction() {
            // Close payment modal immediately
            closePaymentModal();
            
            // Show construction modal after payment modal closes
            setTimeout(() => {
                showConstructionModal();
            }, 400);
        }

        function closeConstructionModal() {
            const modal = document.getElementById('constructionModal');
            modal.classList.remove('active');
            document.body.style.overflow = 'auto';
        }

        function closeConstructionAndOpenMentorship() {
            closeConstructionModal();
            setTimeout(() => {
                openPaymentModal('Mentorship', '$150');
            }, 300);
        }

        function closeConstructionAndUseInterac() {
            closeConstructionModal();
            setTimeout(() => {
                // Get the current plan details from the last opened payment modal
                const selectedPlanInput = document.getElementById('selectedPlan');
                const selectedPriceInput = document.getElementById('selectedPrice');
                const planName = selectedPlanInput ? selectedPlanInput.value : 'Mentorship';
                const planPrice = selectedPriceInput ? selectedPriceInput.value : '$150';
                
                // Reopen payment modal and auto-select Interac
                openPaymentModal(planName, planPrice);
                setTimeout(() => {
                    selectPaymentMethod('interac');
                }, 100);
            }, 300);
        }

        // Loading screen functionality
        window.addEventListener('load', function() {
            // Wait 6 seconds before starting the transition
            setTimeout(function() {
                const loadingScreen = document.getElementById('loading-screen');
                const mainContent = document.getElementById('main-content');
                
                // Start fade out animation for loading screen
                loadingScreen.classList.add('fade-out');
                
                // Show main content with fade in
                setTimeout(function() {
                    mainContent.classList.add('show');
                    // Remove loading screen from DOM after animation completes
                    setTimeout(function() {
                        loadingScreen.style.display = 'none';
                    }, 500);
                }, 100);
            }, 6000);
        });

        // Smooth scroll to pricing section
        function scrollToPricing() {
            document.getElementById('pricing').scrollIntoView({
                behavior: 'smooth',
                block: 'start'
            });
        }

        // Smooth scroll to how it works section
        function scrollToHowItWorks() {
            document.getElementById('how-it-works').scrollIntoView({
                behavior: 'smooth',
                block: 'start'
            });
        }

        // Payment modal functionality
        function openPaymentModal(planName, planPrice) {
            const modal = document.getElementById('paymentModal');
            const selectedPlanName = document.getElementById('selectedPlanName');
            const selectedPlanPrice = document.getElementById('selectedPlanPrice');
            const selectedPlanInput = document.getElementById('selectedPlan');
            const selectedPriceInput = document.getElementById('selectedPrice');
            
            selectedPlanName.textContent = planName + ' Plan';
            selectedPlanPrice.textContent = planPrice + (planName === 'Mentorship' ? ' one-time' : '/month');
            
            // Set hidden form fields
            selectedPlanInput.value = planName;
            selectedPriceInput.value = planPrice;
            
            modal.classList.add('active');
            document.body.style.overflow = 'hidden';
        }

        function closePaymentModal() {
            const modal = document.getElementById('paymentModal');
            modal.classList.remove('active');
            document.body.style.overflow = 'auto';
            
            // Reset forms
            resetPaymentForms();
        }

        function selectPaymentMethod(method) {
            // Remove active class from all payment options
            const options = document.querySelectorAll('.payment-option');
            options.forEach(option => option.classList.remove('selected'));
            
            // Hide all forms
            const forms = document.querySelectorAll('.payment-form');
            forms.forEach(form => form.classList.remove('active'));
            
            // Find and activate the correct payment option
            if (method === 'interac') {
                const interacOption = document.querySelector('.payment-option');
                if (interacOption) {
                    interacOption.classList.add('selected');
                }
                document.getElementById('interacForm').classList.add('active');
            }
        }

        function resetPaymentForms() {
            // Remove selected state from payment options
            const options = document.querySelectorAll('.payment-option');
            options.forEach(option => option.classList.remove('selected'));
            
            // Hide all forms
            const forms = document.querySelectorAll('.payment-form');
            forms.forEach(form => form.classList.remove('active'));
            
            // Clear form inputs
            const form = document.getElementById('interacPaymentForm');
            if (form) {
                form.reset();
            }
        }

        // Format card number input
        document.addEventListener('DOMContentLoaded', function() {
            const cardNumberInput = document.getElementById('cardNumber');
            if (cardNumberInput) {
                cardNumberInput.addEventListener('input', function(e) {
                    let value = e.target.value.replace(/\s+/g, '').replace(/[^0-9]/gi, '');
                    let formattedValue = value.match(/.{1,4}/g)?.join(' ') || value;
                    e.target.value = formattedValue;
                });
            }

            const expiryInput = document.getElementById('expiryDate');
            if (expiryInput) {
                expiryInput.addEventListener('input', function(e) {
                    let value = e.target.value.replace(/\D/g, '');
                    if (value.length >= 2) {
                        value = value.substring(0, 2) + '/' + value.substring(2, 4);
                    }
                    e.target.value = value;
                });
            }
        });

        // Close modal when clicking outside
        document.addEventListener('click', function(e) {
            const paymentModal = document.getElementById('paymentModal');
            const constructionModal = document.getElementById('constructionModal');
            const demoModal = document.getElementById('demoModal');
            
            if (e.target === paymentModal) {
                closePaymentModal();
            }
            if (e.target === constructionModal) {
                closeConstructionModal();
            }
            if (e.target === demoModal) {
                closeDemoModal();
            }
        });
    </script>
</body>
</html>
